{
	"fmt": {
		"include": [
			"typescript"
		],
		"indentWidth": 4,
		"lineWidth": 80,
		"semiColons": true,
		"singleQuote": true,
		"useTabs": true
	},
	"imports": {
		"assert": "https://deno.land/std@0.203.0/assert/mod.ts",
		"dotenv": "https://deno.land/std@0.203.0/dotenv/load.ts",
		"harmony": "https://deno.land/x/harmony@v2.9.0/mod.ts"
	},
	"compilerOptions": {
		"experimentalDecorators": true
	},
	"tasks": {
		"dev": "deno run -A ./src/typescript/main.ts"
	},
	"test": {
		"include": [
			"src/typescript/maths.test.ts"
		]
	}
}